<div class="modal fade text-dark" id="edit-profile-relationsModal" tabindex="-1" role="dialog" aria-labelledby="edit-profile-relationsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-muted" id="edit-profile-relationsModalTitle">Edit Relations Details</h5>
                <button class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/staff/edit-profile-relations/{{staff.id}}" method="POST" class="col s12">
                    <div class="card px-3 mb-2">
                        <div class="pb-3">
                            <label for="maritalstatus">Marital Status</label>
                            <select name="maritalstatus" class="form-control">

                                <option value="{{staff.relations.[0].maritalStatus}}" selected>{{staff.relations.[0].maritalStatus}}</option>
                                <option value="Married">Married</option>
                                <option value="Single">Single</option>
                                <option value="Divorced">Divorced</option>
                            </select>
                        </div>
                        <div class="pb-3">
                            <label for="nextofkin">Next of Kin</label>
                            <input type="text" name="nextofkin" id="" class="form-control" value="{{staff.relations.[0].nextOfKin}}" placeholder="Next of Kin">
                        </div>
                        <div class="pb-3">
                            <label for="homeAddress3">No of children</label>
                            <input type="number" name="childrennumber" id="" class="form-control" value="{{staff.relations.[0].childrenNumber}}" placeholder="No. of Children">
                        </div>

                        <button type="submit" href="" class="btn ml-auto btn-primary mb-1">
                            <em>save changes</em>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>