<div class="modal fade text-dark" id="edit-profile-addressModal" tabindex="-1" role="dialog" aria-labelledby="edit-profile-addressModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-muted" id="edit-profile-addressModalTitle">Edit Address Details</h5>
                <button class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/staff/edit-profile-address/{{staff.id}}" method="POST" class="col s12">
                    <div class="card px-3 mb-2">
                        <div class="pb-3">
                            <label for="homeAddress1">Street Address</label>
                            <input type="text" name="homeAddress1" id="" class="form-control" value="{{staff.homeAddress.[0].street}}" placeholder="Street Address">
                        </div>
                        <div class="pb-3">
                            <label for="homeAddress2">Town</label>
                            <input type="text" name="homeAddress2" id="" class="form-control" value="{{staff.homeAddress.[0].town}}" placeholder="Town">
                        </div>
                        <div class="pb-3">
                            <label for="homeAddress3">State</label>
                            <input type="text" name="homeAddress3" id="" class="form-control" value="{{staff.homeAddress.[0].state}}" placeholder="State">
                        </div>

                        <button type="submit" href="" class="btn ml-auto btn-primary mb-1">
                            <em>save changes</em>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>